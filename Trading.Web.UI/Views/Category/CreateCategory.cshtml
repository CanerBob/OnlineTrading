@model CategoryModel

<h1 class="h3">Kategori Ekleme Sayfası</h1>
<hr />
<div class="row">
	<div class="col-md-8">
		<form asp-controller="Category" asp-action="CreateCategory" method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group row">
				<label asp-for="Name" class="col-sm-2 col-form-label">Kategori Adı : </label>
				<div class="col-sm-10">
					<input class="form-control" asp-for="Name" placeholder="Kategori Adı Giriniz">
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<label asp-for="Url" class="col-sm-2 col-form-label">Kategori Url : </label>
				<div class="col-sm-10">
					<input class="form-control" asp-for="Url" placeholder="Kategori Url Giriniz">
					<span asp-validation-for="Url" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-sm-10 offset-sm-2">
					<button type="submit" class="btn btn-info">Kategori Ekle</button>
				</div>
			</div>
		</form>
	</div>
</div>