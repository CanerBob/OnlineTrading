@model RoleDetails

<h1 class="h3">Rol Düzenleme</h1>
<hr />
<div class="row">
	<div class="col-md-12">
		<form asp-controller="Role" asp-action="RoleEdit" method="post">
			<input type="hidden" name="roleId" value="@Model.Role.Id"/>
			<input type="hidden" name="roleName" value="@Model.Role.Name"/>
			<h6 class="bg-info text-white p-1">Role Ekle @Model.Role.Name</h6>
			<table class="table table-bordered table-sm">
				@if(Model.NonMembers.Count()==0)
				{
				<tr>
					<td colspan="2">Bütün Kullanıcılar Role Ait</td>
				</tr>
				}else
				{
				@foreach (var user in Model.NonMembers)
				{
					<tr>
						<td>@user.UserName</td>
						<td>
							<input type="checkbox" name="IdsToAdd" value="@user.Id"/>
						</td>
					</tr>
				}
				}
			</table>
			<hr/>
			<h6 class="bg-info text-white p-1">Rolden Sil @Model.Role.Name</h6>
			<table class="table table-bordered table-sm">
				@if(Model.Members.Count()==0)
				{
				<tr>
					<td colspan="2">Role Ait Kullanıcı Yok</td>
				</tr>
				}else
				{
				@foreach (var user in Model.Members)
				{
					<tr>
						<td>@user.UserName</td>
						<td>
							<input type="checkbox" name="IdsToDelete" value="@user.Id" />
						</td>
					</tr>
				}
				}
			</table>
			<button type="submit" class="btn btn-info">Değişiklikleri Uygula</button>
		</form>
	</div>
</div>