@model IEnumerable<IdentityRole>
@{
	int count = 0;
}

<div class="row">
	<div class="col-md-11">
		<h1>Bütün Roller</h1>
		<hr />
		<a asp-controller="Role" asp-action="RoleCreate" class="btn btn-info">ROL EKLE</a>
		<hr />
		<table class="table table-bordered">
			<thead>
				<tr>
					<td style="width:250px;">Id</td>
					<td>Rol Adı</td>
					<td style="width:160px;"></td>
				</tr>
			</thead>
			<tbody>
				@if (Model.Count()> 0)
				{
					@foreach (var item in Model)
					{
						count++;
						<tr>
							<td>@count</td>
							<td>@item.Name</td>
							<td>
								<form asp-controller="Role" asp-action="RoleEdit" asp-route-id="@item.Id" class="btn btn-primary btn-sm mr-2">Düzenle
									<input type="hidden" name="RoleName" value="@item.Name" />
								</form>
								
								<form asp-controller="Role" asp-action="RoleDelete" asp-route-id="@item.Id" method="post" style="display:inline;">
									<input type="hidden" name="Id" value="@item.Id" />
									
									<button type="submit" class="btn btn-danger btn-sm">Sil</button>
								</form>
							</td>
						</tr>
					}
				}
				else
				{
					<div class="alert alert-warning"><h3>Rol Yok</h3></div>
				}
			</tbody>
		</table>
	</div>
</div>