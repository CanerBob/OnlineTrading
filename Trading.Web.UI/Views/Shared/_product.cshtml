@model Product

<div class="card mb-2">
	<img class="card-img-top" src="~/img/@Model.ImageUrl" alt="">
	<div class="card-body">
		<h5 class="card-title">@Model.Name</h5>
		<small class="text-muted">
			<i class="fas fa-lira-sign"></i>@Model.Price
		</small>
		<div class="card-footer text-center">
			<a asp-controller="Shop" asp-action="Details" asp-route-url="@Model.Url" class="btn btn-primary btn-sm">Detaylar</a>
			@if (User.Identity.IsAuthenticated)
			{
				<form asp-controller="Basket" asp-action="AddToBasket" method="post" style="display:inline;">
					<input type="hidden" name="productId" value="@Model.Id"/>
					<input type="hidden" name="quantity" value="1"/>
					<button type="submit" class="btn btn-primary btn-sm">Sepete Ekle</button>
				</form>
			}
		</div>
	</div>
</div>